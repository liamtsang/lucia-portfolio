---
import { Image } from 'astro:assets';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

const risograph = await getCollection('risograph')
const fabrication = await getCollection('fabrication')
const videos = await getCollection('videos')
---


		<style>
			main {
				width: 90vw;
			}
			ul {
				display: grid;
				grid-template-columns: 1fr 1fr 1fr;
				gap: 1.6rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
				padding-left: 2.5vw;
			}
			ul li {
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			
			ul li img {
				margin-bottom: 0.5rem;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			h2 {
				margin-top: 0.5rem;
				margin-bottom: 1.5rem;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				main {
					width: 100%;
					padding: 0;
				}
				ul {
					gap: 0.5em;
					grid-template-columns: 1fr 1fr;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
		<main>
			<section>
				<h2>risograph</h2>
				<ul>
					{
						risograph.map((post) => (
							<li>
								<a href={`/risograph/${post.slug}/`}>
									<Image width={720} height={360} src={post.data.heroImage} alt="" />
								</a>
							</li>
						))
					}
				</ul>
			</section>
			<section>
				<h2>fabrication</h2>
				<ul>
					{
						fabrication.map((post) => (
							<li>
								<a href={`/fabrication/${post.slug}/`}>
									<Image width={720} height={360} src={post.data.heroImage} alt="" />
								</a>
							</li>
						))
					}
				</ul>
			</section>
			<section>
				<h2>videos</h2>
				<ul>
					{
						videos.map((post) => (
							<li>
								<a href={`/videos/${post.slug}/`}>
									<Image width={720} height={360} src={post.data.heroImage} alt="" />
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
